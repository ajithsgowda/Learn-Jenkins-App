pipeline{
    agent any

    stages{
        // this is comments
        /* 
            multi line comments
            line 1 
            line 2
            line 3 comment 
        */
        /*
        stage ('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps{
                sh '''
                    ls -la
